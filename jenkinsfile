pipeline {
    agent any
    
    tools {nodejs "node"}
    
    stages {
        stage('Cloning Git') {
            steps {
                git 'https://github.com/DeveloperWakeling/mocha_testing'
            }
        }
        stage('Install Dependencies'){
            steps {
                script{
                    docker.image('node:16-alpine').inside {
                            sh 'npm install'
                        }
                }
            }
        }
        stage ('Test') {
            script{
                    docker.image('node:16-alpine').inside {
                            sh 'npm test'
                        }
                }
        }
    }
}
